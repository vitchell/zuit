<script>
$(document).ready(function(){
  var t = $("#zu-row-template").html();

  $.each(the_cart.items, function(i, v){
    $("#zu-cart-items").append( t.format(
      this.product_name, 
      "399.99",
      this.customizations.customizations.Jacket.Lapels,
      this.customizations.customizations.Jacket.Vents,
      this.customizations.customizations.Jacket.Buttons,
      this.customizations.customizations.Jacket.Lining,
      this.customizations.customizations.Jacket.Monogram.Monogram1 + "<br/>" +  this.customizations.customizations.Jacket.Monogram.Monogram2
    ));
  });

  $.cookie("shopping_cart", null);

  $(".zu-delete").click(function(e){
    var index = parseInt( $(this).attr("href").replace("#", "") );
    the_cart.items.splice( index, 1 );
    $.cookie("shopping_cart", the_cart);
    $(this).parent().remove();
    e.preventDefault();
    return false;
  });

});
</script>

